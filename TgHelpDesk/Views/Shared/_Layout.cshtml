<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @* <meta name="theme-color" content="#000000" /> *@
    <meta name="description"
          content="TgHelpDesk.telegram-bot" />
    <title>TgHelpDesk</title>

    <link rel="stylesheet" href="~/css/bootstrap/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/bot.css" asp-append-version="true" />
    <script src="https://telegram.org/js/telegram-web-app.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</head>

<body>
    <noscript>You need to enable JavaScript to run this app.</noscript>

    <div class="center-absolute" id="loading-spinner">
        <div class="spinner-border visually-hidden" role="status" style="width: 5rem; height: 5rem;">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
    <div class="container" id="main">
        @RenderBody()
    </div>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>